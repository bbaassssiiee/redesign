{
  "builders": [
    {
      "project_id": "{{user `project_id`}}",
      "region": "{{user `google_region`}}",
      "source_image": "{{user `google_centos6`}}",
      "ssh_username": "centos",
      "type": "googlecompute",
      "zone": "{{user `google_zone`}}"
    },
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos6.cfg<enter><wait>"
      ],
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions.iso",
      "guest_os_type": "RedHat_64",
      "headless": false,
      "http_directory": "kickstart",
      "iso_checksum": "7c0dee2a0494dabd84809b72ddb4b761f9ef92b78a506aef709b531c54d30770",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "file:///Users/Shared/CentOS-6.10-x86_64-minimal.iso",
        "http://www.mirrorservice.org/sites/mirror.centos.org/6/isos/x86_64/CentOS-6.10-x86_64-minimal.iso"
      ],
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h 0",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "centos6"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": false,
      "output": "packer/{{.Provider}}-centos6.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "override": {
        "googlecompute": {
          "scripts": [
            "scripts/ansible.sh"
          ]
        },
        "virtualbox-iso": {
          "scripts": [
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/ansible.sh"
          ]
        }
      },
      "type": "shell"
    },
    {
      "extra_arguments": [
        "-vv"
      ],
      "playbook_file": "ansible/packer.yml",
      "role_paths": [
        "ansible/roles/bbaassssiiee.commoncentos",
        "ansible/roles/dockpack.base_utils",
        "ansible/roles/dockpack.base_goss"
      ],
      "type": "ansible-local"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "push": {
    "name": "centos6"
  },
  "variables": {
    "google_centos6": "{{env `GOOGLE_CENTOS6`}}",
    "google_region": "{{env `GOOGLE_REGION`}}",
    "google_zone": "{{env `GOOGLE_ZONE`}}",
    "project_id": "{{env `GOOGLE_PROJECT`}}"
  }
}
